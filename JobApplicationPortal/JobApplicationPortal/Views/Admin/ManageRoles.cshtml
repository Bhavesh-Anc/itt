@using JobApplicationPortal.ViewModels
@model ManageRolesViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<h1>Manage Roles for @Model.UserEmail</h1>

<form method="post">
    <input type="hidden" asp-for="UserId" />
    
    <div class="form-group">
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="roles" value="@role" 
                       @(Model.UserRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>
    
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Users" class="btn btn-secondary">Cancel</a>
</form>
